{{#if isSecondary}}
  {{! A secondary menu can be templated here}}
  <ul>
    {{#foreach navigation}}
      <li class="mr-6 {{concat 'nav-' slug}}">
        <a
          href="{{url absolute="true"}}"
          class="{{link_class for=(url) activeClass="underline"}}"
        >
          {{label}}
        </a>
      </li>
    {{/foreach}}
  </ul>
{{else}}
  <ul>
    {{#foreach navigation}}
      <li class="mb-1 {{concat 'nav-' slug}}">
        <a
          href="{{url absolute="true"}}"
          class="{{link_class for=(url) activeClass="underline"}}"
        >
          {{label}}
        </a>
      </li>
    {{/foreach}}
  </ul>
{{/if}}