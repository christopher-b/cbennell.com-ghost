{
  "name": "sidelight-ghost-theme",
  "description": "A Ghost theme using Vite & TailwindCSS",
  "demo": "https://sidelight.cbennell.com",
  "version": "0.1.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "zip": "yarn build && npx bestzip dist/$npm_package_name.zip assets/built partials/* members/* *.hbs package.json",
    "test": "npx gscan .",
    "pretest": "yarn build"
  },
  "author": {
    "name": "Christopher Bennell",
    "email": "cbennell@hey.com",
    "url": "https://cbennell.com"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/christopher-b/sidelight.git"
  },
  "bugs": "https://github.com/christopher-b/sidelight/issues",
  "contributors": "https://github.com/christopher-b/sidelight/graphs/contributors",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.12",
    "archiver": "^7.0.1",
    "prismjs": "^1.30.0",
    "tailwindcss": "^4.1.12",
    "vite": "^7.1.3",
    "vite-plugin-prismjs": "^0.0.11"
  },
  "browserslist": [
    "defaults"
  ],
  "config": {
    "card_assets": true,
    "custom": {
      "development_mode": {
        "type": "boolean",
        "default": false,
        "description": "Theme development mode. Leave off in production."
      }
    },
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1200
      },
      "xl": {
        "width": 2000
      }
    },
    "posts_per_page": 15
  },
  "type": "module"
}
