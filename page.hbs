{{!< default}}

{{#post}}
<article class="px-12 mb-12 w-3xl {{post_class}}">
<div
  {{#match @page.show_title_and_feature_image}}
  <header>
    <h2 class="text-4xl mb-3">{{title}}</h1>

    {{#if custom_excerpt}}
      <p class="my-6">{{custom_excerpt}}</p>
    {{/if}}

    {{#if feature_image}}
      <figure class="my-6">
        <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        {{#if feature_image_caption}}
          <figcaption class="text-sm italic pt-1">{{feature_image_caption}}</figcaption>
        {{/if}}
      </figure>
    {{/if}}
  </header>
  {{/match}}

  {{! The "prose" class provides default formatting for CMS content: https://github.com/tailwindlabs/tailwindcss-typography}}
  <div class="prose">
    {{content}}
  </div>
</article>
{{/post}}