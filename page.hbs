{{!< default}}

{{#post}}
<article class="{{ post_class }}">
  {{#match @page.show_title_and_feature_image}}
  <header>
    <h1>{{ title }}</h1>

    {{#if custom_excerpt}}
    <excerpt>{{ custom_excerpt }}</excerpt>
    {{/if}}

    {{#if feature_image}}
    {{> "components/feature-image" }}
    {{/if}}
  </header>
  {{/match}}

  <content>{{ content }}</content>
</article>
{{/post}}
