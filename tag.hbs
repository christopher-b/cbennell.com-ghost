{{!< default}}

<div class="px-12 mb-6 w-3xl">
  <div class="gh-container">
    {{#tag}}
      <header>
        <h2 class="text-xl">{{name}}</h2>

        {{#if feature_image}}
          <img class="my-3" src="{{feature_image}}" alt="{{name}}" />
        {{/if}}

        <p class="my-3">
          {{#if description}}
            {{description}}
          {{else}}
            A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
          {{/if}}
        </p>
      </header>
    {{/tag}}

    {{#foreach posts}}
      {{> "components/card"}}
    {{/foreach}}
  </div>
</div>